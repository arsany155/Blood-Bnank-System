@model IEnumerable<BD_26.Models.Donation>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/User_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm())
{

    <p>
        Find by name: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>

}
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Donor Name", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th>
            @Html.ActionLink("Donor SSN", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th>
            @Html.ActionLink("Blood Type", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th>
            @Html.ActionLink("Last Donation Date", "Index", new { sortOrder = ViewBag.NameSortParm1 })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Donor.Fname)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Donor.DSsn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bloodtype)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastDonationDate)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Donation_id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Donation_id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Donation_id })
            </td>
        </tr>
    }

</table>
