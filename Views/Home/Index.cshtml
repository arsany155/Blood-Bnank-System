@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/User_Layout.cshtml";
}

<!-- Start Main -->
<main>
    <div class="slider">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <div class="container">
                <div class="main_content">
                    <h1>Giving blood for the first time</h1>
                    <p>
                        Tens of thousands of people are doing something amazing by registering to join our growing community of blood donors.
                    </p>
                    <a href="#">More</a>
                </div>
            </div>
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/assets/images/header.jpg" class="d-block w-100" alt="img1">
                </div>
                <div class="carousel-item">
                    <img src="~/assets/images/header.jpg" class="d-block w-100" alt="img2">
                </div>
                <div class="carousel-item">
                    <img src="~/assets/images/header.jpg" class="d-block w-100" alt="img3">
                </div>
                <div class="carousel-item">
                    <img src="~/assets/images/BG.jpg" class="d-block w-100" alt="img3">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</main>
<!-- End Main -->
<!-- Start Articles -->
<section class="articles">
    <div class="container">
        <h2>Articles</h2>
        <div class="owl-carousel articles-carousel">
            <div class="card article-card">
                <img src="~/assets/images/p1.jpg" class="card-img-top" alt="img1">
                <a class="heart-icon">
                    <button class="btn">
                        <i class="far fa-heart"></i>
                    </button>
                </a>
                <div class="card-body">
                    <h5 class="card-title">Become a Hero</h5>
                    <p class="card-text">
                        Doctor Strange in the Multiverse of Madness’ stars inspire public to ‘become real-life heroes’ by donating blood as NHS teams up with Marvel Studios
                    </p>
                    <a href="./article-details-en.html" class="btn btn-primary">Details</a>
                </div>
            </div>
            <div class="card article-card">
                <img src="~/assets/images/p2.jpg" class="card-img-top" alt="img1">
                <a class="heart-icon">
                    <button class="btn">
                        <i class="far fa-heart"></i>
                    </button>
                </a>
                <div class="card-body">
                    <h5 class="card-title">Become a Donor</h5>
                    <p class="card-text">
                        Around 1 million blood donations a year to be used to make lifesaving plasma medicine
                    </p>
                    <a href="./article-details-en.html" class="btn btn-primary">Details</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Articles -->
<!-- Start Contact us -->
<section class="contact-us">
    <div class="container">
        <div class="contact-us-content text-center">
            <h2>Contact Us</h2>
            <p>You can contact us to inquire about information and you will be answered</p>
            <div class="whats-btn">
                <span class="ltr">+002 01234567890</span>
                <img src="~/assets/images/whats.png" alt="whats">
            </div>
        </div>
    </div>
</section>
<!-- End Contact us -->
<!-- Start blood-app -->
<div class="blood-app">
    <div class="container">
        <div class="row blood-app-reorder">
            <div class="col-lg-6 blood-app-content">
                <h2>Blood Bank APP</h2>
                <p>
                    Coming Soon :)
                </p>
                <div class="stores text-center">
                    <h3>Available on</h3>
                    <a href="#"><img src="~/assets/images/google.png" alt="google"></a>
                    <a href="#"><img src="~/assets/images/ios.png" alt="ios"></a>
                </div>
            </div>
            <div class="col-lg-5 blood-app-img">
                <img class="w-100" src="~/assets/images/App.png" alt="app">
            </div>
        </div>
    </div>
</div>
<!-- End blood-app -->
